<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title>Biblioteca Online</title>
	<link rel="stylesheet" type="text/css" href="css/cadastro_livro.css">
</head>
<body>
	<nav>
		<ul>
			<li><a href="/listar_projetos">Listar Livros</a></li>
            <li><a href="/adicionarProjetoForm">Adicionar Livro</a></li>
            <li><a href="/">Buscar</a></li>
            <li><a href="/login">Sair</a>	</li>
		</ul>
	</nav>	
	<h1>Cadastro de Livros</h1>
	<form action="adicionarProjeto" method="post">

		<label for="titulo">Título:</label>
		<input type="text" name="titulo" required>

		<label for="categoria">Categoria:</label>
		<select name="categoria" required>
			<option value="" disabled selected>Selecione uma categoria</option>
			<option value="Ficção">Ficção</option>
			<option value="Romance">Romance</option>
			<option value="Aventura">Aventura</option>
			<option value="Terror">Terror</option>
			<option value="Didático">Didático</option>
		</select>

		<label for="autor">Autor:</label>
		<input type="text" name="autor" required>

		<label for="data">Ano de Publicação:</label>
		<input type="number" name="data" required>

		<button  id="meuBotao" type="submit">Cadastrar</button>
	</form>
	<script>
		// Seleciona o formulário
		const form = document.querySelector('form');

		// Verifica se todos os campos foram preenchidos
		if (titulo && categoria && autor && data) {
			// Exibe a mensagem de sucesso
			alert('Livro cadastrado com sucesso!');
			
			// Limpa os campos do formulário
			document.getElementById('titulo').value = '';
			document.getElementById('categoria').value = '';
			document.getElementById('autor').value = '';
			document.getElementById('data').value = '';
		} else {
			// Exibe uma mensagem de erro caso algum campo esteja vazio
			alert('Por favor, preencha todos os campos.');
		};		
    </script>
</body>
</html>




  